
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    // Checks if the user has the 'admin' role in their roles array.
    function isAdmin() {
      let userId = request.auth.uid;
      return isSignedIn() && 'admin' in getRole(userId).roles;
    }

    match /users/{userId} {
      // Admins can read, write, and list all user documents.
      allow list, read, write: if isAdmin();
      
      // Users can only read and write their own document.
      allow read, write: if isOwner(userId);
      
      // Regular users cannot list other users.
      // `allow list` is already covered for admins, so this denies it for everyone else.

      match /{subcollection}/{docId} {
        // Admins can access any subcollection.
        allow read, write: if isAdmin();
        
        // Owners can access their own subcollections.
        allow read, write: if isOwner(userId);
      }
    }
    
    // Rules for the new ActivityLog collection
    match /activityLogs/{logId} {
      // Any signed-in user can create a log entry.
      allow create: if isSignedIn();
      
      // Nobody can read, update, or delete log entries to ensure audit trail integrity.
      allow read, update, delete: if false;
    }
  }
}
